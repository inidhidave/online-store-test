<div class="why-us-sec">
  <div class="container">
      <div class="why-top-ctn">
          <span>{{ section.settings.sub_heading  }} </span>
          <h2>{{ section.settings.heading }}</h2>
          <p>{{ section.settings.description }} </p>
      </div>
      <div class="row">
          <div class="col-md-4">
              <ul class="why-us-items right-algin">
                {% for block in section.blocks limit:3 %}
                  <li>
                    <img src="{{ block.settings.icons | img_url: 'master' }}"/>
                      <h3>{{ block.settings.icon_text }} </h3>
                      <p>{{ block.settings.icon_desc }}</p>
                  </li>
                {% endfor %}
              </ul>
          </div>

          <div class="col-md-4 why-img">
              <img src="{{ section.settings.why_image | img_url: 'master' }}"/>
          </div>

          <div class="col-md-4">
              <ul class="why-us-items left-algin">
                {% for block in section.blocks offset:3 %}
                  <li>
                    <img src="{{ block.settings.icons | img_url: 'master' }}"/>
                      <h3>{{ block.settings.icon_text }} </h3>
                      <p>{{ block.settings.icon_desc }}</p>
                  </li>
                {% endfor %}
              </ul>
          </div>
      </div>
  </div>
</div>

{% schema %}
  {
    "name": "Why Us Section",
    "settings": [
		{
			"type": "text",
			"id": "sub_heading",
			"label": "Grid Shop Subheading"
		},
		{
			"type": "text",
			"id": "heading",
			"label": "Grid Shop heading"
		},
		{
			"type": "textarea",
			"id": "description",
			"label": "Grid Shop Description"
		},
		{
			"type": "image_picker",
			"id": "why_image",
			"label": "Why Us Image"
		}
	],
	"blocks": [
            {
              "type": "icon_blocks",
              "name": "Icon Blocks",
              "settings": [
                {
                  "id": "icons",
                  "type": "image_picker",
                  "label": "Icons"
                },
				{
                  "id": "icon_text",
                  "type": "text",
                  "label": "Icons Text"
                },
				{
                  "id": "icon_desc",
                  "type": "textarea",
                  "label": "Icons Description"
                }
              ]
            }
       
            
		]
  }
{% endschema %}

