{% schema %}
  {
    "name": "Delivery Service Section",
    "settings": [
	{
       "id": "btn_link",
       "type": "url",
       "label": "Button URL"
    },
    {
       "id": "btn_text",
       "type": "text",
       "label": "Button text"
    }
  ],
	
  "blocks": [
		{
			"type": "block",
			"name": "Image-Content Block",
			"settings": [
				{
					"type": "image_picker",
					"id": "process_image",
					"label": "Process Image"
				},
				{
					"type": "text",
					"id": "process_title",
					"label": "Process Title"
				},
				{
					"type": "textarea",
					"id": "process_desc",
					"label": "Process Description"
				}
			]
		}
	]

  }
{% endschema %}

