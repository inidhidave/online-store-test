<div class="inner-container">
  
 {% for block in section.blocks %}
<div class="row">
    {% assign evens = forloop.index | modulo: 2 %}
    {%if evens == 1 %}

        <div class="col-md-6">
            <div class="img-box-services">
                <img src="{{ block.settings.process_image | img_url: 'master' }}">
            </div>
        </div>
        <div class="col-md-6 delivery-content-group">
            <div class="dots-border">
                <ul>
                    <li></li>
                    <li></li>
                    <li><img src=" //cdn.shopify.com/s/files/1/0039/1567/7745/t/3/assets/78-icon.svg" width="35"></li>
                </ul>
            </div>
            <div>
                <div class="delivery-services-content">
                    <h3>{{ block.settings.process_title }} </h3>
                    <span>{{ block.settings.process_desc }}
                    </span>
                </div>
            </div>
        </div>
    {% else %}
        <div class="col-md-6 delivery-content-group">
            <div class="dots-border">
                <ul>
                    <li></li>
                    <li></li>
                    <li><img src=" //cdn.shopify.com/s/files/1/0039/1567/7745/t/3/assets/78-icon.svg" width="35"></li>
                </ul>
            </div>
            <div>
                <div class="delivery-services-content">
                    <h3>{{ block.settings.process_title }} </h3>
                    <span>{{ block.settings.process_desc }}
                    </span>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="img-box-services">
                <img src="{{ block.settings.process_image | img_url: 'master' }}">
            </div>
        </div>
    {% endif %}
</div>
{% endfor %}
   
