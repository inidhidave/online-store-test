{% if shop.metafields.custom_fields["why_us_lists"] != blank %}
{% assign data_attr = shop.metafields._cf_shop["why_us_lists"].data_attr %}

<div class="row" {{ data_attr }}>
                        <div class="col-md-6">
                        <h3>{{tab_title}}</h3>
                          <p>{{tab_para}}</p>
                            <ul class="what-you-get-block-listing">
                              {% for item in shop.metafields.custom_fields["why_us_lists"] limit: 3 %}
                            <li>
                              {% render "cf-image" with image: item.image, crop: "center", size: "380x380" %}
                              <p>{{ item.title }}</p>
                              </li>
                              {%endfor%}
<!--                             <li><span class="years-15icon"></span><p>Lorem Ipsum is simply</p></li> 
                            <li><span class="amazing-icon"></span><p>Lorem Ipsum is simply</p></li> -->
                          </ul>
                          
                            <ul class="what-you-get-block-listing">
                              {% for item in shop.metafields.custom_fields["why_us_lists"] offset: 3 %}
                              <li>
                                {% render "cf-image" with image: item.image, crop: "center", size: "380x380" %}
                                <p>{{item.title}}</p>
                              </li>
                              {% endfor %}
<!--                               <li><span class="quality-icon"></span><p>Lorem Ipsum is simply</p></li> 
                              <li><span class="friendly-icon"></span><p>Lorem Ipsum is simply</p></li> -->
                          </ul>
                          {% if tab_button_link != blank %}
                                                          <div class="btn-area">
            <a class="secondary-btn" href="{{tab_button_link}}">{{tab_button}}</a>
          </div>
                          {%endif%}
                        </div>
                        <div class="col-md-6">
<img src="{{ tab_img | img_url: '800x' }}">
                       
                        </div>

                      </div>
{%endif%}

<style>
  .what-you-need-section .benefits-block .what-you-get-block-listing li p{margin: 0 !important;}
</style>